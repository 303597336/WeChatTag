<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_green">

        <Button
            android:id="@+id/iv_tools_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/iv_tools_right"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:maxLength="6"
            android:onClick="onClick"
            android:padding="10dip"
            android:text="其它"
            android:textColor="#fff"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_center"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="#fff"
            android:textSize="20sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <com.study.wechattag.view.MultipleLinearLayout
            android:id="@+id/ll_group_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_tag_edit_bg"
                android:hint="输入分组"
                android:maxLength="15"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textSize="15sp" />
        </com.study.wechattag.view.MultipleLinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="所有的分组"
            android:textSize="18sp" />

        <com.study.wechattag.view.MultipleLinearLayout
            android:id="@+id/ll_group_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        </com.study.wechattag.view.MultipleLinearLayout>

    </LinearLayout>
</LinearLayout>
